# Agent Factory â€” Example Environment Variables

# Core LLM/API keys (do not commit real secrets)
OPENAI_API_KEY=
GOOGLE_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=

# Audit & Telemetry
GCP_PROJECT_ID=agent-factory
OTEL_EXPORTER_OTLP_ENDPOINT=https://logging.googleapis.com/

# Database (Postgres recommended; falls back to local SQLite if unset)
DATABASE_URL=postgresql+psycopg2://agent_factory:***@localhost/agent_factory

# Human Firewall
HITL_APPROVE=false
ESCALATION_LEVEL=HITL

# Memory Engine Federation
MEMORY_BACKEND=faiss
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379

# Reflective Daemon (L3)
ENABLE_REFLECTIVE_DAEMON=true
REFLECTIVE_COHERENCE_THRESHOLD=0.85

# Reflective Sync Automation
# If set to false, tools/reflective_sync.py will not perform updates and will emit an alert
REFLECTIVE_SYNC_ALLOWED=true

# Archivist (Curator) permissions
ALLOW_WRITE_CURATED=true
ALLOW_VERSIONED_REPLACE=true
REVIEW_REQUIRED_FOR_REPLACE=true
# Optional explicit whitelist/read scope for Archivist
WRITE_WHITELIST=/knowledge_base/curated/,/knowledge_base/conversations/
READ_SCOPE=project_root/*

# Operator access (dev): Optional bearer token to protect GPT/WS routes
OPERATOR_TOKEN=

# OAuth2 (planned): Google Sign-In client credentials (do not commit secrets)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=


# Genesis Health Monitor
GENESIS_HEALTHCHECK_INTERVAL=60
GENESIS_MAX_FAILURES=3
